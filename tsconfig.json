{
  "compilerOptions": {
    "target": "ES2020",             // Versão do JS de saída
    "module": "commonjs",           // Para rodar no Node.js
    "rootDir": "src",               // Pasta onde está o código TS
    "outDir": "dist",               // Pasta de saída
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
